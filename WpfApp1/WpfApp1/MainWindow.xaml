        <Label Content="Повний рахунок:" Grid.Column="1" HorizontalAlignment="Left" Margin="220,240,0,0" VerticalAlignment="Top" Width="142" FontSize="16" FontFamily="Century"/>
        <Label Content="Роздільний рахунок:" Grid.Column="1" HorizontalAlignment="Left" Margin="222,294,0,0" VerticalAlignment="Top" Width="173" FontFamily="Century" FontSize="16"/>
        <Label Content="UAH" Grid.Column="1" HorizontalAlignment="Left" Margin="404,184,0,0" VerticalAlignment="Top" FontSize="16" Width="57" FontFamily="Century"/>
        <Label Content="USD" Grid.Column="1" HorizontalAlignment="Left" Margin="466,184,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.23,0.654" FontFamily="Century" FontSize="16" Width="56"/>
        <Label Content="EVR" Grid.Column="1" HorizontalAlignment="Left" Margin="522,185,0,0" VerticalAlignment="Top" FontSize="16" FontFamily="Century" Width="53"/>
        <Label Content="RUB" Grid.Column="1" HorizontalAlignment="Left" Margin="575,185,0,0" VerticalAlignment="Top" FontSize="16" FontFamily="Century" Width="50"/>
