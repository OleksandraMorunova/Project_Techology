        <Label x:Name="label1" Content="Введіть рахунок:" HorizontalAlignment="Left" Margin="224,66,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.768,0.663" Height="34" Width="185" FontSize="16" Grid.Column="1" FontFamily="Century"/>
