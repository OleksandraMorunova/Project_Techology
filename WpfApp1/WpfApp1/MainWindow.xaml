        <TextBlock x:Name="PTextBlockUSD" Grid.Column="1" HorizontalAlignment="Left" Margin="474,243,0,0" Text="_" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Century" FontSize="16"/>
        <TextBlock x:Name="RTextBlockUAH" Grid.Column="1" HorizontalAlignment="Left" Margin="413,296,0,0" Text="_" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="16"/>
        <TextBlock x:Name="PTextBlockEVR" Grid.Column="1" HorizontalAlignment="Left" Margin="530,245,0,0" Text="_" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Century" FontSize="16"/>
        <TextBlock x:Name="RTextBlockUSD" Grid.Column="1" HorizontalAlignment="Left" Margin="474,297,0,0" Text="_" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Century" FontSize="16"/>
        <TextBlock x:Name="RTextBlockEVR" Grid.Column="1" HorizontalAlignment="Left" Margin="530,298,0,0" Text="_" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="16" FontFamily="Century"/>
        <TextBlock x:Name="PTextBlockRUB" Grid.Column="1" HorizontalAlignment="Left" Margin="583,243,0,0" Text="_" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="16" FontFamily="Century"/>
        <TextBlock x:Name="RTextBlockRUB" Grid.Column="1" HorizontalAlignment="Left" Margin="583,298,0,0" Text="_" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="16" FontFamily="Century"/>

    </Grid>
</Window>
